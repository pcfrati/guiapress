<div class="container mt-4">
    <h2>Lista de Artigos</h2>
    <a href="/admin/articles/new" class="btn btn-success">Novo Artigo</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>TÃ­tulo</th>
                <th>Categoria</th>
            </tr>
        </thead>
        <tbody>
            <% if (articles.length > 0) { %>
                <% articles.forEach(article => { %>
                    <tr>
                        <td><%= article.title %></td>
                        <td><%= article.category ? article.category.title : "Sem categoria" %></td>

                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="2">Nenhum artigo encontrado.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

